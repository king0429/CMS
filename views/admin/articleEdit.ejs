 <% include header.ejs%>
	 <!-- 引入百度 富文本 -->
   <style type="text/css">
     #content{
      padding: 0;
      height: 200px;
      border: none;
     }
 
      #btn{
        margin-bottom:20px;
      }
        #edui1_elementpath{display: none;}
 
   </style>
	<script src="/ueditor/ueditor.config.js"></script>
	<script src="/ueditor/ueditor.all.min.js"></script>
  <!-- 输入框组 -->
  <div class="container" style="margin-bottom: 50px;">
    <h3 style="text-align: center;margin-bottom: 30px">添加分类</h3>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <form action="/admin/articleUpdate" method="get"> 
          <div class="form-group">
            <label for="user_name">文章标题</label>
            <input type="text" class="form-control" id="user_name" name="title" value="<%=data.title%>">
            <input type="hidden" value="<%=data._id%>" name="_id">
          </div>
          <div class="form-group">
            <label for="user_name">栏目</label>
            <select name="catId" class="form-control">
              <%datalist.forEach(function (val) {%>
                <option value="<%=val._id%>" <%= val._id==data.catId?"selected":""%>><%=val.name%></option>
              <%})%>
            </select>
          </div>
          <div class="form-group">
            <label for="user_name">作者</label>
            <input type="text" class="form-control" id="user_name" name="author" value="<%=data.author%>">
          </div>

          <div class="form-group ">
            <label for="user_name">关键词</label>
            <input type="text" class="form-control" id="user_name" name="keyword" value="<%=data.keyword%>">
          </div>  
          <button type="submit" id="btn" class="btn btn-default">Submit</button>   
        </form>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
  <!-- 输入框组 END -->
<% include footer.ejs%>

