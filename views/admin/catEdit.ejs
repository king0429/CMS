<% include header.ejs%> 
  <!-- 输入框组 -->
  <div class="container" style="margin-bottom: 50px;">
    <h3 style="text-align: center;margin-bottom: 30px">添加分类</h3>
    <div class="row">
      <div class="col-md-3"></div> 
      <div class="col-md-6">
        <form action="/admin/catUpdate" method="get">
          <div class="form-group">
            <label>封面</label>
            <input type="hidden" class="form-control"  name="_id" value="<%=data._id%>">
          </div>  
          <div class="form-group">
            <label for="user_name">名称</label>
            <input type="text" class="form-control" id="user_name" name="name" value="<%=data.name%>">
          </div>
          <div class="form-group">
            <label for="cat">排序</label>
            <input type="number" class="form-control" id="cat" name="order" value="<%=data.order%>">
          </div>
          <div class="form-group">
            <textarea style="resize: none;height:80px ;" class="form-control" name="info"><%=data.info%></textarea>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
  <!-- 输入框组 END -->
<% include footer.ejs%>

